<h1>Edit Song!</h1>

<form action="/songs/<%= @song.slug %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  
  <label for="Artist Name">Artist Name </label>
  <input type="text" name="Artist Name" value="<%= @song.artist.name %>">

  <br></br>

  <label for="Name">Song Name </label>
  <input type="text" name="Name" value="<%= @song.name %>">

  <br></br>

  <label>Genre(s)</label>
  <% Genre.all.each do |genre| %>
    <input type="checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>"
    <%= 'checked' if @song.genres.include?(genre) %>><%= genre.name %></input>
  <% end %>

  <br></br>

  <input type="submit" value="Save">
</form>
